<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoucherVault.Views.VoucherView"
             Title="VoucherView">
    <VerticalStackLayout>
        <Label Text="Individual voucher view" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding Voucher.ShopName,FallbackValue='No shop name set'}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Label Text="{Binding Voucher.VoucherValue,FallbackValue='No voucher value set'}" VerticalOptions="Center" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>