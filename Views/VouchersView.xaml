<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:VoucherVault.ViewModels"
             xmlns:views="clr-namespace:VoucherVault.Views"
             x:Class="VoucherVault.Views.VouchersView"
             
             Title="VouchersView">
    <VerticalStackLayout>
        <ScrollView>
            <ListView ItemsSource="{Binding VoucherList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <HorizontalStackLayout>
                                <Button Text="{Binding ShopName,FallbackValue='No value'}"  Command="{Binding Source={RelativeSource Mode=FindAncestor,AncestorType={x:Type views:VouchersView}}, Path=BindingContext.GotoVoucherCommand}" CommandParameter="{Binding .}" />
                                <!--CommandParameter="{Binding .}"-->
                                <Label Text="{Binding VoucherValue,FallbackValue='No value'}" />
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
               </ScrollView>
        
    </VerticalStackLayout>
</ContentPage>